CC = $(CROSS_COMPILE)gcc

TARGET=check_seapp
TARGET_EXE=$(TARGET)

SRC = tools/check_seapp.c

OBJ = $(SRC:.c=.o)

DEPEND_STATIC_LIB = ../../output/lib/libsepol.a ../../output/lib/libselinux.a

CFLAGS = -Wall -Werror
CFLAGS += -I../libsepol/include -I../libselinux/include

$(TARGET_EXE):$(OBJ) $(DEPEND_STATIC_LIB);$(CC) -o $@ $^
$(filter %.o,$(OBJ)):%.o:%.c;$(CC) $(CFLAGS) -c -o $@ $<

.PHONY:install
install:
	 mv $(TARGET_EXE) ../../output/bin/

.PHONY:clean
clean:
	 rm -f $(OBJ) $(TARGET_EXE)